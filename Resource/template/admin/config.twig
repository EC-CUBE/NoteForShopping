{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}{{ 'note_for_shopping.config_title'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.store.plugin.plugin_list'|trans }}{% endblock %}

{% block stylesheet %}{% endblock stylesheet %}

{% block javascript %}{% endblock javascript %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-header"><span>{{ 'note_for_shopping.config_card1_title'|trans }}</span></div>
                    <div class="card-body">
                        <!--商品RSS URL-->
                        <div class="row mb-3">
                            <div class="col-3" data-tooltip="true" data-placement="top" title=""
                                 data-original-title="{{ 'note_for_shopping.config_rss_url_help'|trans }}">
                                <span>{{ 'note_for_shopping.config_rss_url_title'|trans }}</span><i
                                    class="fa fa-question-circle fa-lg ml-1"></i>
                            </div>
                            <div class="col mb-2">
                                <a href="{{ url('note_for_shopping_rss') }}"
                                   target="_blank">{{ url('note_for_shopping_rss') }}</a>
                            </div>
                        </div>
                        <!--note連携サービス情報-->
                        <div class="row mb-3">
                            <div class="col-3" data-tooltip="true" data-placement="top" title=""
                                 data-original-title="{{ 'note_for_shopping.config_note_service_help'|trans }}">
                                <span>{{ 'note_for_shopping.config_note_service'|trans }}</span><i
                                    class="fa fa-question-circle fa-lg ml-1"></i>
                            </div>
                            <div class="col mb-2">
                                <p>{{ 'note_for_shopping.config_note_service_info'|trans|raw }}</p>
                                <textarea class="form-control" rows="4" disabled>
{{ 'note_for_shopping.config_note_service_shop_name'|trans }}{{ BaseInfo.shop_name }}
{{ 'note_for_shopping.config_note_service_shop_url'|trans }}{{ url('homepage') }}
{{ 'note_for_shopping.config_note_service_rss_url'|trans }}{{ url('note_for_shopping_rss') }}</textarea>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="card rounded border-0 mb-4">
                    <!--連携中の商品一覧-->
                    <div class="card-header">
                        <div data-tooltip="true" data-placement="left" title=""
                             data-original-title="{{ 'note_for_shopping.config_target_product_help'|trans }}">
                            <span>{{ 'note_for_shopping.config_target_product_list'|trans }}</span><i
                                class="fa fa-question-circle fa-lg ml-1"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        {% for Product in Products %}
                            <div class="row">
                                <div class="col-3 mb-2">
                                    <img src="{{ asset(Product.mainFileName|no_image_product, 'save_image') }}"
                                         style="max-width: 50px" class="mr-3">
                                    <a href="{{ url('admin_product_product_edit', { id: Product.id }) }}"
                                       target="_blank">{{ Product.name }}</a>
                                </div>
                            </div>
                        {% else %}
                            <div class="row">
                                <div class="col mb-2">
                                    <p>{{ 'note_for_shopping.config_target_product_not_found'|trans }}</p>
                                    <p>{{ 'note_for_shopping.config_target_product_not_found_message'|trans }}</p>
                                    <a href="{{ url("admin_product") }}">{{ 'admin.product.product_management'|trans }}＞{{ 'admin.product.product_list'|trans }}</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="c-conversionArea">
        <div class="c-conversionArea__container">
            <div class="row justify-content-between align-items-center">
                <div class="col-6">
                    <div class="c-conversionArea__leftBlockItem">
                        <a class="c-baseLink"
                           href="{{ url('admin_store_plugin') }}">
                            <i class="fa fa-backward" aria-hidden="true"></i>
                            <span>{{ 'admin.store.plugin.plugin_list'|trans }}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
